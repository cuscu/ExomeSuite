<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import exomesuite.graphic.*?>

<fx:root styleClass="root" type="javafx.scene.layout.VBox" spacing="3" alignment="TOP_CENTER"  xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <SectionTitle title="Properties"  />
        <HBox maxWidth="9999" >
            <children>
                <Parameter name="Name" fx:id="name" type="TEXT"  HBox.hgrow="ALWAYS" />
                <Parameter name="Code" fx:id="code" type="TEXT" HBox.hgrow="ALWAYS"  />
            </children>
        </HBox>
        <Parameter name="Path" fx:id="path" type="DIRECTORY" />
        <Parameter name="Description"  fx:id="description" type="TEXT" />
        <SectionTitle title="Original data"  />
        <Parameter name="Forward sequences" fx:id="forward" type="FILE"/>
        <Parameter name="Reverse sequences" fx:id="reverse" type="FILE"/>
        <HBox maxWidth="9999">
            <children>
                <Parameter name="Base encoding" fx:id="encoding" type="OPTIONS" HBox.hgrow="ALWAYS"  />
                <Parameter name="Reference genome" fx:id="genome" type="OPTIONS" HBox.hgrow="ALWAYS"  />
            </children>
        </HBox>
        <SectionTitle title="Processed data" />
        <Button fx:id="addButton" text="Add a file"/>
        <ListView fx:id="files" VBox.vgrow="ALWAYS" minHeight="100"  />
    </children>

</fx:root>
