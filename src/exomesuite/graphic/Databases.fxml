<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import exomesuite.graphic.*?>

<fx:root type="javafx.scene.layout.VBox" spacing="5"  xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <!-- Standard databases -->
        <SectionTitle title="Variant databases"/>
        <VBox spacing="5" >
            <children>
                <FileSelector text="Mills and 1000G indels" fx:id="mills"/>
                <FileSelector text="1000G phase 1 indels" fx:id="phase1" />
                <FileSelector text="1000G OMNI" fx:id="omni" />
                <FileSelector text="Hapmap" fx:id="hapmap" />
                <FileSelector text="dbSNP" fx:id="dbsnp" />
                <FileSelector text="Ensembl exons" fx:id="ensembl"/>
            </children>
        </VBox>

        <!-- Reference genomes -->
        <SectionTitle title="Reference genome" />
        <VBox spacing="5" >
            <children>
                <FileSelector text="GRCHv37 (hg19)" fx:id="grch37"/>
                <FileSelector text="GRCHv38" fx:id="grch38" />
            </children>
        </VBox>

    </children>
</fx:root>
