<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="exomesuite.tsvreader.ReaderViewController">
    <children>
        <GridPane xmlns:fx="http://javafx.com/fxml" hgap="5" >
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" halignment="RIGHT" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints  vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label GridPane.rowIndex="0"  GridPane.columnIndex="0" text="File:" />
                <Label GridPane.rowIndex="1"  GridPane.columnIndex="0" text="Size:" />
                <Label GridPane.rowIndex="2"  GridPane.columnIndex="0" text="Lines:" />                
                <Label GridPane.rowIndex="3"  GridPane.columnIndex="0" text="Current lines:" />
                <Label GridPane.rowIndex="0"  GridPane.columnIndex="1" fx:id="file" />
                <Label GridPane.rowIndex="1"  GridPane.columnIndex="1" fx:id="size" />
                <Label GridPane.rowIndex="2"  GridPane.columnIndex="1" fx:id="lines" />
                <Label GridPane.rowIndex="3"  GridPane.columnIndex="1" fx:id="currentLines" />
            </children>
        </GridPane>
        <Button fx:id="export" text="Export data" />
        <TableView fx:id="table" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
