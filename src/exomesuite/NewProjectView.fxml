<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="5" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exomesuite.NewProjectViewController">
    <children> 
        <GridPane hgap="5.0" vgap="5.0" xmlns:fx="http://javafx.com/fxml">
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="name" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField fx:id="path" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Project name" GridPane.columnIndex="0" GridPane.rowIndex="0" />                
                <Label text="Root path" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </GridPane>
        <Label fx:id="finalPath" />
        <Button fx:id="acceptButton" text="Create" />
    </children>
</VBox>
