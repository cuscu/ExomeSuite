<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import exomesuite.graphic.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" spacing="5" xmlns="http://javafx.com/javafx/8" fx:controller="exomesuite.NewProjectViewController">
    <children>
        <SectionTitle title="Required"/>
        <GridPane hgap="5.0" vgap="5.0" xmlns:fx="http://javafx.com/fxml">
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <children>
                <Label text="Project name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label text="Code" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Root path" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="name" prefWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Name"  />
                <TextField fx:id="code" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Code" />
                <FileSelector fx:id="path" GridPane.columnIndex="1" GridPane.rowIndex="2" openPath="true" textPosition="LEFT"  />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </GridPane>
        <Label fx:id="finalPath" />
        <SectionTitle title="Optional" hLine="true" />
        <GridPane hgap="5.0" vgap="5.0" xmlns:fx="http://javafx.com/fxml">
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <children>
                <Label text="Forward sequences" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Reverse sequences" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label text="Reference genome" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label text="Encoding" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <FileSelector fx:id="forward" GridPane.columnIndex="1" GridPane.rowIndex="1" textPosition="LEFT" />
                <FileSelector fx:id="reverse" GridPane.columnIndex="1" GridPane.rowIndex="2" textPosition="LEFT" />
                <ComboBox fx:id="reference" GridPane.columnIndex="1" GridPane.rowIndex="3"  />
                <ComboBox fx:id="encoding" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </GridPane>
        <Button fx:id="acceptButton" text="Create" />
    </children>
</VBox>
