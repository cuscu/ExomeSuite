<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import exomesuite.graphic.*?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1" prefHeight="800" prefWidth="1000"
            xmlns="http://javafx.com/javafx/8" fx:controller="exomesuite.MainViewController" id="main">
    <center>
        <SplitPane orientation="HORIZONTAL" dividerPositions="0.3" >
            <items>
                <SplitPane orientation="VERTICAL" dividerPositions="0.25" maxHeight="9999" >
                    <items>
                        <!-- List of Projects -->
                        <VBox alignment="TOP_CENTER" >
                            <children>
                                <SectionTitle  title="Projects"/>
                                <ProjectList fx:id="projectList" />
                            </children>
                        </VBox>
                        <!-- Project properties -->
                        <VBox alignment="TOP_CENTER" fillWidth="true"  >
                            <children>
                                <!--ProjectActions fx:id="projectActions" /-->
                                <PActions fx:id="pactions" />
                                <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS" >
                                    <content>
                                        <ProjectInfo fx:id="projectInfo" VBox.vgrow="ALWAYS"/>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
                <TabPane fx:id="workingArea"/>
            </items>
        </SplitPane>
    </center>
    <top>
        <VBox>
            <children>
                <MenuBar xmlns:fx="http://javafx.com/fxml">
                    <menus>
                        <Menu mnemonicParsing="true" text="_Menu">
                            <items>
                                <MenuItem fx:id="openMenu" text="Open project" />
                                <MenuItem fx:id="newMenu" text="New project" />
                                <SeparatorMenuItem />
                                <MenuItem fx:id="databaseMenu" text="Select databases" />
                                <SeparatorMenuItem />
                                <MenuItem fx:id="openFile" text="Open file" />
                            </items>
                        </Menu>
                        <Menu text="_Operations" mnemonicParsing="true" >
                            <items>
                                <MenuItem fx:id="combineVCFMenu" text="Combine VCF"/>
                                <MenuItem fx:id="intersectMIST" text="Combine MIST"/>
                            </items>
                        </Menu>
                        <Menu text="_Help" mnemonicParsing="true">
                            <items>
                                <MenuItem fx:id="about" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ButtonsBar fx:id="toolbar"/>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox fx:id="infoBox" alignment="CENTER" spacing="5" >
            <children>
                <Label fx:id="info"/>
            </children>
            <padding>
                <javafx.geometry.Insets bottom="5" left="5" right="5" top="5" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
