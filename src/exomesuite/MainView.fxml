<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exomesuite.MainViewController">
    <center>
        <TabPane fx:id="projects" HBox.hgrow="SOMETIMES" />
    </center>
    <top>
        <VBox>
            <children>
                <MenuBar xmlns:fx="http://javafx.com/fxml">
                    <menus>
                        <Menu mnemonicParsing="false" text="Project">
                            <items>
                                <MenuItem fx:id="openMenu" text="Open project" />
                                <MenuItem fx:id="newMenu" text="New project" />
                                <MenuItem fx:id="databaseMenu" text="Select databases" />
                            </items>
                        </Menu>
                        <Menu text="TSVReader">
                            <items>
                                <MenuItem fx:id="openTSV" text="Open file" /> 
                            </items>
                        </Menu>
                        <Menu text="VCF">
                            <items>
                                <MenuItem fx:id="openVCFMenu" text="Open VCF"/>
                                <MenuItem fx:id="combineVCFMenu" text="Combine VCF"/>  
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <FlowPane fx:id="toolBar"/>
            </children>
        </VBox>
    </top>
</BorderPane>
