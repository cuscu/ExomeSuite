<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import exomesuite.graphic.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600" prefWidth="1000" xmlns="http://javafx.com/javafx/8" fx:controller="exomesuite.MainViewController">
    <center>
        <SplitPane orientation="HORIZONTAL" dividerPositions="0.3" >
            <items>
                <SplitPane orientation="VERTICAL" dividerPositions="0.25" maxHeight="9999" >
                    <items>
                        <!-- List of Projects -->
                        <VBox alignment="TOP_CENTER" >
                            <children>
                                <SectionTitle  title="Projects"/>
                                <!--<ProjectTable fx:id="projectTable"/>-->
                                <ProjectList fx:id="projectList" />
                            </children>
                        </VBox>
                        <!-- Project properties -->
                        <VBox alignment="TOP_CENTER" fillWidth="true"  >
                            <children>
                                <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS" >
                                    <content>
                                        <ProjectInfo fx:id="projectInfo" VBox.vgrow="ALWAYS"/>
                                    </content>
                                </ScrollPane>
                                <ProjectActions fx:id="projectActions" />
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
                <TabPane fx:id="workingArea"/>
            </items>
        </SplitPane>
    </center>
    <top>
        <VBox>
            <children>
                <MenuBar xmlns:fx="http://javafx.com/fxml">
                    <menus>
                        <Menu mnemonicParsing="false" text="Project">
                            <items>
                                <MenuItem fx:id="openMenu" text="Open project" />
                                <MenuItem fx:id="newMenu" text="New project" />
                                <MenuItem fx:id="databaseMenu" text="Select databases" />
                            </items>
                        </Menu>
                        <Menu text="TSV">
                            <items>
                                <MenuItem fx:id="openTSV" text="Open file" />
                            </items>
                        </Menu>
                        <Menu text="VCF">
                            <items>
                                <MenuItem fx:id="openVCFMenu" text="Open VCF"/>
                                <MenuItem fx:id="combineVCFMenu" text="Combine VCF"/>
                            </items>
                        </Menu>
                        <Menu text="MIST">
                            <items>
                                <MenuItem fx:id="intersectMIST" text="Intersect"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <FlowPane fx:id="toolBar"/>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox >
            <children>
                <Label fx:id="info"/>
                <ProgressBar fx:id="progress" visible="false"  />
            </children>
        </HBox>
    </bottom>
</BorderPane>
