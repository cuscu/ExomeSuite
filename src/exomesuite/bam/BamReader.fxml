<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import exomesuite.graphic.*?>

<fx:root type="VBox" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <StackPane fx:id="canvas" />
        <HBox >
            <children>
                <ChoiceParam fx:id="chromosome" title="Chromosome"  />
                <TextParam fx:id="position" title="Position" />
            </children>
        </HBox>
        <Label fx:id="info"/>
        <HBox >
            <children>
                <Label text="Zoom"/>
                <NumberParam fx:id="zoom" title="Zoom" min="20" max="100" value="20" />
            </children>
        </HBox>
    </children>
</fx:root>
